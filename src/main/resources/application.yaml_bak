spring:
  application:
    name: TaskManagerApplication

  h2:
    console:
      enabled: true
      path: /h2-console

  datasource:
    url: jdbc:h2:mem:taskdb;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
    username: sa
    password: sa

  jpa:
    hibernate:
      ddl-auto: update # Automatically creates tables based on your Java objects
    show-sql: true # Prints the SQL Spring generates to your IntelliJ console

server:
  port: 9090
